<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Datepicker</title>
    <script src="~/js/ulke_sehir_cek.js"></script>
</head>



<body>
    

    <form>


        <div class="container-fluid text-center" style="padding:100px">

            <div class="row text-centered">

                <div class="col fs-1 fw-bolder" style="padding-bottom:50px">
                    <p>Register Page</p>
                </div>

                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">İsim:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="Ad" placeholder="Ad">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Soyisim:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="Soyad" placeholder="Soyad">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Doğum Tarihi:</label>
                    <div class="date col-sm-10">

                        <input type="date" class="form-control" id="datepick" placeholder="gg.aa.yyy" />

                        
                    </div>
                    
                </div>

                <div class="form-group row">
                    <label for="asd" class="col-sm-2 col-form-label">Cinsiyet:</label>
                    <div class="col-sm-10  col-form-label text-sm-left ">
                       
                        <label class="radio-inline ">
                            <input type="radio" name="season" id="erkek" value="true" checked /> Erkek
                        </label>
                         
                        <label class="radio-inline ">
                            <input type="radio" name="season" id="kadın" value="false" /> Kadın
                        </label>
                       
                    </div>
                   
                    
                </div>
            


                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Ülke:</label>
                    <div class="col-sm-10">
                        <select class="form-select" id="ulkeDropdown">
                            <option selected>Open this select menu</option>
                            <!-- Options will be dynamically added here using JavaScript -->
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Şehir:</label>
                    <div class="col-sm-10">
                        <select class="form-select" id="sehirDropdown">
                            <!-- Options will be dynamically added here using JavaScript -->
                        </select>
                    </div>
                </div>


                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Açıklama:</label>
                    <div class="col-sm-10 ">
                        <div class="form-group">

                            <textarea class="form-control" placeholder="Açıklama giriniz..." id="Aciklama_text" rows="3"></textarea>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Dosya Yükleme:</label>
                    <div class="col-sm-10">
                        <input class="form-control" type="file" id="employeepic" name="employeepic">
                    </div>
                    <br>
                    <div id="imgPreview" class="thumbnail" style="display:none; margin-top: 10px;">
                        <img class="img-responsive" id="targetImg" style="max-width: 200px; max-height: 200px;" />
                        <div class="caption">
                            <span id="description"></span>
                        </div>
                    </div>
                </div>



                <div>
                    <button type="button" id="Listele" class=" btn btn-outline-primary" onclick="get_data()"> Save </button>
                    <button type="button" class="btn btn-outline-danger " onclick="location.reload()">Sil</button>
                </div>

                <div>

                </div>




            </div>
            

        </div>





    </form>

</body>


